<h1>Welcome to Trollo <%="#{current_user.first_name} #{current_user.last_name}"%></h1>
<div class="btn light-blue lighten-5">
<%=link_to "Create a Board", new_board_path%>
</div>
<p>choose a board below</p>

  <div class="row">
  <%@boards_sql.each do |each|%>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%=link_to each.title, board_path(each.id)%></span>
          <p></p>
        </div>
        <div class="card-action">
          <%= link_to "edit", edit_board_path(each.id)%>
          <%= link_to "Delete", board_path(each.id), method: :delete%>
        </div>
      </div>
    </div>
    <% end %>
  </div>

