<h1><%="#{@board.title} Board"%></h1>
<p><%= link_to "Create new list", new_board_list_path(@board)%> </p>

<%= render partial: "lists/new"%>

<p>
<% @lists.each do |list|%>
<%= "#{list.title} List"%>
<%= link_to "Delete list", board_list_path(@board, list.id), method: :delete%>
<ul>
    <%=link_to "New Task", new_list_task_path(list.id) %>
    
    <% list.tasks.each do |task| %>
    <li>
    <%= task.title%>
    </li>
    <% end %>
    
</ul>
<br>
<% end %>



</p>
